@tailwind base;
@tailwind components;
@tailwind utilities;

/* Base Styles */
body {
  margin: 0;
  padding: 0;
  background-color: white;
  color: #111827;
  font-family: system-ui, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
}

h1 {
  font-size: 2.25rem;
}

h2 {
  font-size: 1.875rem;
}

h3 {
  font-size: 1.5rem;
} 